<div class="question-card col-md-8 col-md-offset-2">
  <h5 class="center-text"><span class="questionCategory"></span></h5>
  <h3 class="center-text"><span class="questionBody"></span></h3>
</div>

{{#if showGameForm}}
  <div class="col-md-8 col-md-offset-2">
    <div class="center-text">
      {{input name="answer" value=answer id="answer" type=text placeholder="what is ..." class="center-text answer-input"}}
      <br>
      <button class= "btn btn-default submit-answer-button" {{action 'nextQuestion'}}>Submit Answer</button>
    </div>
  </div>
{{else}}
  {{#if roundBeginning}}
    <button class="btn btn-default start-round-button" {{action 'startRound'}}>Start</button>
  {{/if}}
{{/if}}
<br>
<h3 class="game-message">{{gameMessage}}</h3>

{{#if counterInitialized}}
    {{round-timer model=model roundOver='roundOver'}}
{{/if}}
