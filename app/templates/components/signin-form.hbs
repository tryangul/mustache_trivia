<form class="form-wrapper">
  <div class="form-group">
    <label for="email">Email</label>
    {{input value=email id="email" class="form-control" type="email"}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    {{input value=password id="password" class="form-control" type="password"}}
  </div>

  <button class="btn btn-primary" {{action 'signInPassword'}}>Save</button>
</form>
