<div class="signup">

  {{#liquid-if signupShowing class="formShowing"}}
    <form class="form-wrapper">
      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username" class="form-control" required=true min="5"}}
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        {{input value=email id="email" class="form-control" type="email" required=true min="6"}}
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        {{input value=password id="password" class="form-control" required=true type="password"}}
      </div>

      <button class="btn btn-primary" {{action 'close'}}>Close</button>

      <button class="btn btn-default" {{action 'signUp'}}>Save</button>
    </form>
    <button class="btn btn-facebook" {{action "signIn" "facebook"}}>{{fa-icon "facebook" size=1}} Facebook Sign In</button>

  {{else}}
    <button class="btn btn-primary btn-login" {{action 'showSignup'}}>Sign Up</button>
  {{/liquid-if}}
</div>
