<div class="profile-header">
  <div class="profile-image col-md-2 col-md-offset-3">
    <img src={{model.profileImageURL}}>
  </div>
  <div class="profile-name col-md-5">
    <h1>{{model.username}}</h1>
  </div>
  <div class="col-md-12">
    <h2>Total Games Played {{model.totalGames}}</h2>
  </div>
  <div class="col-md-12">
    <h2>Total Questions Answered {{model.totalAnswers}}</h2>
  </div>
  <div class="col-md-12">
    <h2>Correctness Meter {{#link-to 'scoreboard'}}{{model.answerRatio}} %{{/link-to}}</h2>
  </div>
  <div class="col-md-12">
    <h2>Total Correct {{model.correctAnswers}}</h2>
  </div>
  <div class="col-md-12">
    <h2>Total Incorrect {{model.incorrectAnswers}}</h2>
  </div>
  <div class="col-md-12">
    <h2>Answers/Minute {{model.answersPerMinute}}</h2>
  </div>
  <hr>
</div>
